-- Táº¡o GUI cho hiá»‡u á»©ng chá»¯
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(0, 400, 0, 50)
textLabel.Position = UDim2.new(0.5, -200, 0.5, -25)
textLabel.Text = ""
textLabel.TextColor3 = Color3.fromRGB(192, 192, 192)  -- MÃ u chá»¯ báº¡c xÃ¡m sÃ¡ng
textLabel.BackgroundTransparency = 1  -- KhÃ´ng cÃ³ ná»n
textLabel.TextStrokeTransparency = 1 -- ban Ä‘áº§u viá»n trong suá»‘t
textLabel.TextStrokeColor3 = Color3.fromRGB(220, 220, 220) -- mÃ u viá»n sÃ¡ng hÆ¡n

local flash = Instance.new("Frame")
flash.Parent = screenGui
flash.Size = UDim2.new(1, 0, 1, 0)
flash.Position = UDim2.new(0, 0, 0, 0)
flash.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
flash.BackgroundTransparency = 1
flash.ZIndex = 0

local lines = {
    "30 thÃ¡ng 4ğŸ˜„",
    "1975ğŸ˜„",
    "ViÃªÌ£t Nam thÃ´Ìng nhÃ¢Ìt Ä‘Ã¢Ìt nÆ°Æ¡ÌcğŸ‡»ğŸ‡³",
    ".....!",
    ".....!",
    "Viá»‡t Nam huy hoÃ ngğŸ˜!",
    "TÃ”I! MÃ£i yÃªu Viá»‡t NamğŸ‡»ğŸ‡³ğŸ‡»ğŸ‡³ğŸ˜",
    "cali tuá»•i cÃ¡i lá»“n con cáº·cğŸ‘ˆğŸ˜ğŸ‘"
}

-- HÃ m láº¯c mÃ n hÃ¬nh cháº­m, giáº£m dáº§n trong 0.9s
local function shake(duration)
    local startTime = tick()
    local initialRange = 10
    while tick() - startTime < duration do
        local elapsed = tick() - startTime
        local progress = elapsed / duration
        local shakeAmount = math.sin(progress * math.pi * 2) * (initialRange * (1 - progress))
        screenGui.Position = UDim2.new(0, shakeAmount, 0, 0)
        wait()
    end
    screenGui.Position = UDim2.new(0, 0, 0, 0)
end

-- HÃ m lÃ³e sÃ¡ng viá»n chá»¯ theo thá»i gian
local function glowEffect()
    -- Tá»« lÃºc báº­t script: khÃ´ng lÃ³e sÃ¡ng (viá»n trong suá»‘t)
    textLabel.TextStrokeTransparency = 1
    wait(0.895)
    
    -- LÃ³e sÃ¡ng nhanh trong 0.195 giÃ¢y, viá»n dÃ y lÃªn (giáº£m transparency)
    local startTime = tick()
    local duration = 0.195
    while tick() - startTime < duration do
        local t = (tick() - startTime) / duration
        textLabel.TextStrokeTransparency = 1 - t * 0.85 -- lÃ³e sÃ¡ng nháº¹
        wait()
    end
    
    -- Giá»¯ viá»n sÃ¡ng nháº¹ (TextStrokeTransparency ~0.15)
    textLabel.TextStrokeTransparency = 0.15
end

-- HÃ m giáº£m sÃ¡ng viá»n chá»¯ sau dÃ²ng cuá»‘i
local function fadeGlow()
    local startTime = tick()
    local duration = 0.215
    local initialTransparency = textLabel.TextStrokeTransparency
    while tick() - startTime < duration do
        local t = (tick() - startTime) / duration
        textLabel.TextStrokeTransparency = initialTransparency + t * (1 - initialTransparency)
        wait()
    end
    textLabel.TextStrokeTransparency = 1
end

-- Hiá»ƒn thá»‹ tá»«ng dÃ²ng chá»¯ vá»›i hiá»‡u á»©ng
local function showLine(line, index)
    local totalMoveTime = 1.375 -- thá»i gian bay chá»¯
    local displayTime = 1.105 -- thá»i gian hiá»‡n chá»¯ Ä‘áº§y Ä‘á»§
    local fadeTime = 0.985 -- thá»i gian má» chá»¯ máº¥t
    local totalLineTime = totalMoveTime + displayTime + fadeTime
    
    textLabel.Text = ""
    local fromLeft = index % 2 == 1
    local color = Color3.fromRGB(192, 192, 192)
    textLabel.TextColor3 = color
    
    -- Láº¯c mÃ n hÃ¬nh khi báº¯t Ä‘áº§u dÃ²ng
    shake(0.9)
    
    -- Bay chá»¯ cÃ¹ng lÃºc hiá»‡n tá»«ng chá»¯ trong 1.375 giÃ¢y
    local length = #line
    local startTime = tick()
    while tick() - startTime < totalMoveTime do
        local t = (tick() - startTime) / totalMoveTime
        local charsToShow = math.floor(t * length)
        if charsToShow > length then charsToShow = length end
        textLabel.Text = string.sub(line, 1, charsToShow)
        -- Bay chá»¯ tá»« trÃ¡i hoáº·c pháº£i: di chuyá»ƒn vá»‹ trÃ­
        local offsetX = fromLeft and (-400 + 400 * t) or (400 - 400 * t)
        textLabel.Position = UDim2.new(0.5, offsetX, 0.5, -25)
        wait()
    end
    textLabel.Text = line
    textLabel.Position = UDim2.new(0.5, 0, 0.5, -25)
    
    -- Sau khi hiá»‡n háº¿t chá»¯ cá»§a dÃ²ng, lÃ³e sÃ¡ng viá»n chá»¯
    glowEffect()
    
    -- Giá»¯ chá»¯ hiá»‡n Ä‘áº§y Ä‘á»§ trong displayTime
    wait(displayTime)
    
    -- Má» chá»¯ dáº§n trong fadeTime
    for i = 1, 20 do
        textLabel.TextTransparency = i / 20
        wait(fadeTime / 20)
    end
end

-- Cháº¡y toÃ n bá»™ cÃ¡c dÃ²ng
for i, line in ipairs(lines) do
    showLine(line, i)
    -- Äá»£i 1.55 giÃ¢y trÆ°á»›c khi dÃ²ng tiáº¿p theo báº¯t Ä‘áº§u
    wait(1.55 - 1.375) -- trá»« thá»i gian bay chá»¯ Ä‘á»ƒ dÃ²ng má»›i báº¯t Ä‘áº§u Ä‘Ãºng lÃºc
end

-- Sau khi dÃ²ng cuá»‘i cÃ¹ng lÃ³e sÃ¡ng, giáº£m sÃ¡ng viá»n chá»¯
fadeGlow()

-- Cháº¡y script tá»« URL sau khi hoÃ n thÃ nh cÃ¡c hiá»‡u á»©ng
local function runScriptAfterTextAnimation()
    local loadScript = loadstring(game:HttpGet("https://raw.githubusercontent.com/Quocx/mod-bloxfruits/acd19ff495c4cdbb6dcdada06c919f776176ce83/AllScript-BloxFruits.lua"))
    loadScript()
end

runScriptAfterTextAnimation()
